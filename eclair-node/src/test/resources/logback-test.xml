<configuration scan="true" debug="false">

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <encoder>
            <pattern>%date{HH:mm:ss.SSS} %highlight(%-5level) %logger{0}%X{category}%X{nodeId}%X{channelId}%X{paymentHash}%.-11X{parentPaymentId}%.-11X{paymentId} - %msg%ex{12}%n</pattern>
        </encoder>
    </appender>

    <appender name="CONSOLE_NOTIFICATIONS" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <encoder>
            <pattern>%d %highlight(%-5level)- %msg%ex{12}%n</pattern>
        </encoder>
    </appender>

    <logger level="INFO" name="notifications">
        <!--<appender-ref ref="CONSOLE_NOTIFICATIONS"/>-->
    </logger>

    <root level="INFO">
        <!--<appender-ref ref="CONSOLE"/>-->
    </root>

</configuration>