            <version>0.5.0</version>
        </dependency>
        <!-- SERIALIZATION -->
        <dependency>
            <groupId>org.scodec</groupId>
            <artifactId>scodec-core_${scala.version.short}</artifactId>
            <version>1.11.2</version>
        </dependency>
        <dependency>
            <groupId>commons-codec</groupId>
